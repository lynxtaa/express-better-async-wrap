{
  "name": "express-better-async-wrap",
  "version": "0.1.2",
  "description": "Allows fastify-like use of async functions as Express router handlers",
  "repository": {
    "type": "git",
    "url": "https://github.com/lynxtaa/express-better-async-wrap.git"
  },
  "bugs": {
    "url": "https://github.com/lynxtaa/express-better-async-wrap/issues"
  },
  "homepage": "https://github.com/lynxtaa/express-better-async-wrap#readme",
  "files": [
    "lib"
  ],
  "keywords": [
    "express",
    "async"
  ],
  "main": "lib/index.js",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "build": "babel src -d lib --ignore test.js",
    "prebuild": "rimraf lib",
    "lint": "eslint src/**/*.js",
    "check-pretty": "prettier --list-different \"*.{js,json}\" \"src/**/*.{js,json}\"",
    "preversion": "npm run build",
    "prepublish": "npm run build",
    "release": "standard-version",
    "test": "jest"
  },
  "author": "Alex Kondratyuk <lynxtaa@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "eslint": "^4.19.1",
    "husky": "^1.0.0-rc.7",
    "jest": "^23.0.0",
    "lint-staged": "^7.1.2",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.2",
    "standard-version": "^8.0.0"
  }
}
